<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expanded_content_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/content_item_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|fill_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Title" />

    <ImageView
        android:id="@+id/content_item_image"
        android:maxWidth="@dimen/notification_expanded_content_item_image_max_width"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/notification_expanded_content_item_image_padding_top_bottom"
        android:paddingBottom="@dimen/notification_expanded_content_item_image_padding_top_bottom"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/content_item_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Notification" />

</LinearLayout>

